{
  "name": "markdown-it-ts",
  "type": "module",
  "version": "0.0.2-beta.3",
  "description": "A TypeScript implementation of the markdown-it library with separate parse and render functionalities.",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "markdown",
    "parser",
    "renderer",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest",
    "watch": "tsdown -w",
    "doc": "node support/build_doc.mjs",
    "gh-doc": "npm run doc && gh-pages -d apidoc -f",
    "demo": "npm run lint && node support/build_demo.mjs",
    "gh-demo": "npm run demo && gh-pages -d demo -f -b master -r git@github.com:markdown-it/markdown-it.github.io.git",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp --commit --tag --push && pnpm publish",
    "perf:matrix": "npm run build && node scripts/perf-matrix.mjs",
    "perf:sweep": "npm run build && node scripts/full-vs-chunked-sweep.mjs",
    "perf:generate": "npm run build && node scripts/perf-generate-report.mjs",
    "perf:update-readme": "node scripts/update-readme-metrics.mjs",
    "perf:compare": "node scripts/perf-compare.mjs docs/perf-latest.json",
    "perf:check": "node scripts/perf-check.mjs --threshold=0.10",
    "perf:check:latest": "node scripts/perf-check.mjs --threshold=0.10 --latest",
    "perf:diff": "node scripts/perf-diff.mjs --threshold=0.10",
    "perf:all": "npm run perf:generate && npm run perf:update-readme && npm run perf:check",
    "perf:all:latest": "npm run perf:generate && npm run perf:update-readme && npm run perf:check:latest",
    "perf:accept": "npm run perf:generate && node scripts/perf-accept.mjs",
    "perf:generate:zh": "npm run build && node scripts/perf-generate-report.zh.mjs"
  },
  "dependencies": {
    "entities": "^4.5.0",
    "linkify-it": "^5.0.0",
    "mdurl": "^2.0.0",
    "punycode.js": "^2.3.1",
    "uc.micro": "^2.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "argparse": "^2.0.1",
    "bumpp": "^8.2.1",
    "chai": "^4.5.0",
    "eslint": "^9.39.1",
    "markdown-it": "^14.1.0",
    "markdown-it-for-inline": "^2.0.1",
    "markdown-it-testgen": "^0.1.6",
    "needle": "^3.3.1",
    "shelljs": "^0.10.0",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6",
    "vue-tsc": "^2.2.12"
  }
}
