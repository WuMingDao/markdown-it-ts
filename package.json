{
  "name": "markdown-it-ts",
  "type": "module",
  "version": "0.0.2-beta.3",
  "packageManager": "pnpm@9.0.0",
  "description": "A TypeScript implementation of the markdown-it library with separate parse and render functionalities.",
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "markdown",
    "parser",
    "renderer",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugins/with-renderer": {
      "types": "./dist/plugins/with-renderer.d.ts",
      "import": "./dist/plugins/with-renderer.js"
    },
    "./render/renderer": {
      "types": "./dist/render/renderer.d.ts",
      "import": "./dist/render/renderer.js"
    },
    "./stream/buffer": {
      "types": "./dist/stream/buffer.d.ts",
      "import": "./dist/stream/buffer.js"
    },
    "./stream/chunked": {
      "types": "./dist/stream/chunked.d.ts",
      "import": "./dist/stream/chunked.js"
    },
    "./stream/debounced": {
      "types": "./dist/stream/debounced.d.ts",
      "import": "./dist/stream/debounced.js"
    },
    "./support/chunk_recommend": {
      "types": "./dist/support/chunk_recommend.d.ts",
      "import": "./dist/support/chunk_recommend.js"
    },
    "./common/token": {
      "types": "./dist/common/token.d.ts",
      "import": "./dist/common/token.js"
    },
    "./common/utils": {
      "types": "./dist/common/utils.d.ts",
      "import": "./dist/common/utils.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest",
    "watch": "tsdown -w",
    "doc": "node support/build_doc.mjs",
    "gh-doc": "npm run doc && gh-pages -d apidoc -f",
    "demo": "npm run lint && node support/build_demo.mjs",
    "gh-demo": "npm run demo && gh-pages -d demo -f -b master -r git@github.com:markdown-it/markdown-it.github.io.git",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:original": "RUN_ORIGINAL=1 pnpm test",
    "test:original:network": "RUN_ORIGINAL=1 RUN_NETWORK=1 pnpm test",
    "release": "bumpp --commit --tag --push && pnpm publish",
    "perf:matrix": "npm run build && node scripts/perf-matrix.mjs",
    "perf:sweep": "npm run build && node scripts/full-vs-chunked-sweep.mjs",
    "perf:generate": "npm run build && node scripts/perf-generate-report.mjs",
    "perf:update-readme": "node scripts/update-readme-metrics.mjs",
    "perf:compare": "node scripts/perf-compare.mjs docs/perf-latest.json",
    "perf:check": "node scripts/perf-check.mjs --threshold=0.10",
    "perf:check:latest": "node scripts/perf-check.mjs --threshold=0.10 --latest",
    "perf:diff": "node scripts/perf-diff.mjs --threshold=0.10",
    "perf:all": "npm run perf:generate && npm run perf:update-readme && npm run perf:check",
    "perf:all:latest": "npm run perf:generate && npm run perf:update-readme && npm run perf:check:latest",
    "social:card": "node scripts/generate-social-card.mjs",
    "social:png": "node scripts/svg-to-png.mjs --all",
    "social:all": "pnpm run social:card -- --all && pnpm run social:png",
    "perf:accept": "npm run perf:generate && node scripts/perf-accept.mjs",
    "perf:generate:zh": "npm run build && node scripts/perf-generate-report.zh.mjs"
  },
  "scriptsMeta": {
    "test:original": {
      "description": "Run optional upstream/original tests (requires RUN_ORIGINAL=1)."
    },
    "test:original:network": {
      "description": "Run original tests with network CRC (RUN_NETWORK=1)."
    }
  },
  "dependencies": {
    "entities": "^4.5.0",
    "linkify-it": "^5.0.0",
    "mdurl": "^2.0.0",
    "punycode.js": "^2.3.1",
    "uc.micro": "^2.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "argparse": "^2.0.1",
    "bumpp": "^8.2.1",
    "chai": "^4.5.0",
    "eslint": "^9.39.1",
    "gh-pages": "^6.1.1",
    "markdown-it": "^14.1.0",
    "markdown-it-for-inline": "^2.0.1",
    "markdown-it-testgen": "^0.1.6",
    "needle": "^3.3.1",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "sharp": "^0.33.4",
    "shelljs": "^0.10.0",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.12",
    "typescript": "^5.9.3",
    "unified": "^11.0.5",
    "vitest": "^4.0.6",
    "vue-tsc": "^2.2.12"
  }
}
